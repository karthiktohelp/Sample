{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
             "url": "http://localhost:8080",
            "port": 9222,
            "webRoot": "${workspaceRoot}/app",
            "sourceMaps": true,
            "trace":"verbose",
            "sourceMapPathOverrides": {
                "webpack:///./app/*":"${workspaceRoot}/app/*"
            }
            
        }
    ]
}