{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
             "url": "http://localhost:8080",
            "port": 9222,
            "webRoot": "${workspaceRoot}/app",
            "sourceMaps": true,
            "trace":"verbose",
            "sourceMapPathOverrides": {
                "webpack:///./app/*":"${workspaceRoot}/app/*"
            }
            
        }
    ]
}
    }
  },
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "semi": 2,
    "jsx-a11y/href-no-hash":"off",
    "react/prefer-stateless-function": [
      "off",
       { 
         "ignorePureComponents": "ignorePureComponents"
         }
      ],
    "react/no-multi-comp": ["off", { "ignoreStateless": "boolean" }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "import/extensions": [
      "error",
      "always",
      {
        ".js": "never",
        ".jsx": "never"
        
      }
    ],
    "quotes": "off",
    "comma-dangle": "off",
    "no-console": "off",
    "arrow-parens": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/core-modules": ["react"]
  }
}
